<h1><%= @skill.skill %></h1>

<% form_for @skill do |f| %>
<p>
Skill Name:<br />
  <%= f.text_field :skill %>
</p>
  <p>
Stopping Power:<br />
    <%= f.select :related_attribute, options_for_select(related_attributes_array) %>
</p>
  <p>
    <%= f.submit "Update" %>
  </p>


<% end %>

<%= link_to "Disable", character_skill_data_path(@skill), :method => :delete, :confirm => "Are you sure you want to do this?" %>