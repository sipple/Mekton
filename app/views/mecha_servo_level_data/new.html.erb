<h1>Create a Mecha Weapon</h1>

<% form_for(:mecha_servo_level_data, @level, :url => {:action => 'create'}) do |f| %>
  <p>
  Servo:<br />
    <%= f.select :mecha_servo_data_id, MechaServoData.all.collect {|s| [s.servo, s.id]} %>
  </p>
    <p>
  Level:<br />
      <%= f.text_field :level %>
  </p>
    <p>
  Kills:<br />
      <%= f.text_field :kills %>
  </p>
    <p>
  Space:<br />
      <%= f.text_field :space %>
  </p>
      <p>
  Cost: <br />
        <%= f.text_field :cost %>
  </p>
      <p>
  Weight:<br />
        <%= f.text_field :weight %>
  </p>
    <p>
      <%= f.submit "Create" %>
    </p>


<% end %>